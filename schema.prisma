datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FactGame {
  id Int @id

  // Game Details
  name         String
  about        String
  detailedDesc String
  shortDesc    String
  reviews      String
  headerImg    String
  website      String
  supportURL   String
  supportEmail String
  price        Float
  requiredAge  Int
  dlcCount     Int
  achievements Int

  // Average Playtime
  avePlaytimeForever Int
  avePlaytime2Weeks  Int
  medPlaytimeForever Int
  medPlaytime2Weeks  Int

  // Metrics
  peakCCU         Int
  metacriticScore Int
  metacriticURL   String
  notes           String
  scoreRank       String
  positiveReviews Int
  negativeReviews Int
  estimatedOwners String
  reviewerCount   Int

  // Relations
  packages    DimPackage[]
  screenshots DimScreenshot[]
  movies      DimMovie[]

  TagGroup         DimTagGroup       @relation(fields: [tagGroupId], references: [tagGroupId])
  GenreGroup       DimGenreGroup     @relation(fields: [genreGroupId], references: [genreGroupId])
  LanguageGroup    DimLanguageGroup  @relation(fields: [languageGroupId], references: [languageGroupId])
  DeveloperGroup   DimDeveloperGroup @relation(fields: [developerGroupId], references: [developerGroupId])
  PublisherGroup   DimPublisherGroup @relation(fields: [publisherGroupId], references: [publisherGroupId])
  CategoryGroup    DimCategoryGroup  @relation(fields: [categoryGroupId], references: [categoryGroupId])
  DimSupport       DimSupport        @relation(fields: [dimSupportId], references: [supportId])
  DimDate          DimDate           @relation(fields: [releaseDate], references: [date])
  genreGroupId     Int
  languageGroupId  Int
  developerGroupId Int
  publisherGroupId Int
  categoryGroupId  Int
  dimSupportId     Int
  releaseDate      DateTime
  tagGroupId       Int
}

model TextLanguage {
  language        String
  groupId         Int
  languageGroupId DimLanguageGroup @relation(fields: [groupId], references: [languageGroupId])

  @@id([language, groupId])
}

model AudioLanguage {
  language        String
  groupId         Int
  languageGroupId DimLanguageGroup @relation(fields: [groupId], references: [languageGroupId])

  @@id([language, groupId])
}

model DimLanguageGroup {
  languageGroupId Int             @id
  game            FactGame[]
  TextLanguage    TextLanguage[]
  AudioLanguage   AudioLanguage[]
}

model DimPackage {
  id          Int             @id
  gameId      Int
  title       String
  description String?
  subs        DimPackageSub[]
  game        FactGame        @relation(fields: [gameId], references: [id])
}

model DimPackageSub {
  id          Int         @id @default(autoincrement())
  text        String
  description String
  price       Float
  Package     DimPackage? @relation(fields: [packageId], references: [id])
  packageId   Int?
}

model Developer {
  name             String
  groupId          Int
  developerGroupId DimDeveloperGroup @relation(fields: [groupId], references: [developerGroupId])

  @@id([name, groupId])
}

model DimDeveloperGroup {
  developerGroupId Int         @id
  game             FactGame[]
  Developer        Developer[]
}

model Publisher {
  name             String
  groupId          Int
  publisherGroupId DimPublisherGroup @relation(fields: [groupId], references: [publisherGroupId])

  @@id([name, groupId])
}

model DimPublisherGroup {
  publisherGroupId Int         @id
  game             FactGame[]
  Publisher        Publisher[]
}

model Category {
  name            String
  groupId         Int
  categoryGroupId DimCategoryGroup @relation(fields: [groupId], references: [categoryGroupId])

  @@id([name, groupId])
}

model DimCategoryGroup {
  categoryGroupId Int        @id
  game            FactGame[]
  Category        Category[]
}

model Genre {
  genre        String
  groupId      Int
  genreGroupId DimGenreGroup @relation(fields: [groupId], references: [genreGroupId])

  @@id([genre, groupId])
}

model DimGenreGroup {
  genreGroupId Int        @id
  game         FactGame[]
  Genre        Genre[]
}

model DimScreenshot {
  url    String
  game   FactGame @relation(fields: [gameId], references: [id])
  gameId Int

  @@id([url, gameId])
}

model DimMovie {
  url    String
  game   FactGame @relation(fields: [gameId], references: [id])
  gameId Int

  @@id([url, gameId])
}

model Tag {
  name           String
  groupId        Int
  count          Int
  GameTagGroupId DimTagGroup @relation(fields: [groupId], references: [tagGroupId])

  @@id([name, groupId, count])
}

model DimTagGroup {
  tagGroupId Int        @id
  game       FactGame[]
  Tag        Tag[]
}

model DimSupport {
  supportId      Int        @id
  macSupport     Boolean
  windowsSupport Boolean
  linuxSupport   Boolean
  game           FactGame[]
}

model DimDate {
  date     DateTime   @id
  quarter  Int
  month    String
  year     Int
  FactGame FactGame[]
}
